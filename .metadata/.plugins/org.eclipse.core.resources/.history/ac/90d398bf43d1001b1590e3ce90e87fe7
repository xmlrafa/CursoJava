package oo.heranca.desafio;

public class Carro {
	
	final int VELOCIDADE_MAXIMA;	
	int velocidade = 0; 
	int delta = 5;
	
	Carro(int velocidadeMaxima){
		VELOCIDADE_MAXIMA = velocidadeMaxima;
	}
	
	void Acelerar (){
		if (velocidade + delta > VELOCIDADE_MAXIMA) {
			velocidade = VELOCIDADE_MAXIMA;
		}else {		
		velocidade += delta;
		}
	}
	void frear () {
		if (velocidade > 4) {
			velocidade -= 5;
		}
		else {
			velocidade = 0;
		}
	}
}
